<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.fragment.note.AddNoteFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.main.fragment.note.AddNoteFragment"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/Addnote_titleTV"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/titleET"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:autofillHints=""
                android:background="@null"
                android:hint="@string/Addnote_title"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/Addnote_descriptionTV"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/descriptionET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:autofillHints=""
                android:background="@null"
                android:gravity="top|start"
                android:hint="@string/Addnote_description"
                android:inputType="textMultiLine"
                android:minLines="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/Addnote_priorityTV"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/prioritySP"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:autofillHints=""
                android:entries="@array/priority"
                android:prompt="@string/Addnote_priority"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/Addnote_categoryTV"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/categorySP"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:prompt="@string/Addnote_category"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/buttonAdd"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons"
                android:paddingTop="10dp"
                android:text="@string/Addnote_addbtn"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

        </TableRow>

    </LinearLayout>
</ScrollView>